		<dependency org="javax.ejb" name="com.springsource.javax.ejb" rev="${javax.ejb}" conf="ext->runtime"/>
		<dependency org="javax.jms" name="com.springsource.javax.jms" rev="${javax.jms}" conf="ext->runtime"/>
